{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "custom_char_schema.json",
  "type": "object",
  "properties": {
    "animation": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "type": "object",
          "properties": {
            "name": { "type": "string"},
            "loop": { "type": "boolean"},
            "indices": {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            "fps": {"type": "number"},
            "flippedname": {"type": "string"}
          },
          "required": ["name"],
          "additionalProperties": true
        }
      }},
      "deadAnimation": {
        "type": "object",
        "patternProperties": {
          ".+": {
            "type": "object",
            "properties": {
              "name": { "type": "string"},
              "loop": { "type": "boolean"},
              "indices": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "fps": {"type": "number"},
              "flippedname": {"type": "string"}
            },
            "required": ["name", "loop"]
          }
      }},
      "offset": {
        "type": "object",
        "patternProperties": {
          ".+": {
            "type": "array",
            "items": [
              {
                "type": "number"
              },
              {
                "type": "number"
              }
            ],
            "$comment": "make sure only x and y are given",
            "additionalItems": false,
            "minLength": 2
          }
        }
      },
      "deadOffset": {
        "type": "object",
        "patternProperties": {
          ".+": {
            "type": "array",
            "items": [
              {
                "type": "number"
              },
              {
                "type": "number"
              }
            ],
            "$comment": "make sure only x and y are given",
            "additionalItems": false,
            "minLength": 2
          }
        }
      },
      "flipx": {"type":"boolean"},
      "camOffset": {
        "type": "array",
        "items": [
          {
            "type": "number"
          },
          {
            "type": "number"
          }
        ],
        "$comment": "make sure only x and y are given",
        "additionalItems": false,
        "minLength": 2
      },
      "enemyOffset": {
        "type": "array",
        "items": [
          {
            "type": "number"
          },
          {
            "type": "number"
          }
        ],
        "$comment": "make sure only x and y are given",
        "additionalItems": false,
        "minLength": 2
      },
      "followCam": {
        "type": "array",
        "items": [
          {
            "type": "number"
          },
          {
            "type": "number"
          }
        ],
        "$comment": "make sure only x and y are given",
        "additionalItems": false,
        "minLength": 2
      },
      "antialiasing": {
        "type": "boolean"
      },
      "scale": {
        "type": "number"
      },
      "likeBf": {
        "type": "boolean"
      },
      "dances": {
        "type": "boolean"
      },
      "midpoint": {
        "type": "array",
        "items": [
          {
            "type": "number"
          },
          {
            "type": "number"
          }
        ],
        "$comment": "make sure only x and y are given",
        "additionalItems": false,
        "minLength": 2
      },
      "playAnim": {"type": "string"},
      "holdLength": {"type": "number"},
      "usesChiptune": {"type": "boolean"},
      "canSing": {"type": "boolean"},
      "over-gf": {"type": "boolean"},
      "size": {
        "type": "array",
        "items": [
          {
            "type": "number"
          },
          {
            "type": "number"
          }
        ],
        "$comment": "make sure only x and y are given",
        "additionalItems": false,
        "minLength": 2
      }
  },
  "required": ["animation", "offset", "like", "playAnim"],
  "$comment": "dead things must have an offset AND an animation",
  "dependencies": {
    "deadOffset": ["deadAnimation"],
    "deadAnimation": ["deadOffset"]
  },
  "additionalProperties": false
}
